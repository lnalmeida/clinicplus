@model ClinicPlus.ViewModels.Pacientes.AddPacienteViewModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><span class="ml-1 mr-2"><i class="fas fa-user-injured"></i></span>Cadastrar paciente</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <form asp-action="Add">
                <div class="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label">CPF</label>
                            <input id="crm" asp-for="Cpf" type="text" mask="999.999.999-99" class="form-control w-25" placeholder="CPF do paciente">
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" type="text" class="form-control w-75" placeholder="Nome completo do mÃ©dico">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" type="date" class="form-control w-25" placeholder="@DateTime.Today">
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary w-25">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>